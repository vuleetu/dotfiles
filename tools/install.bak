if [ -f ~/.zshrc ]; then
    echo "Backup ~/.zshrc to ~/.zshrc.bbk"
    mv ~/.zshrc ~/.zshrc.bbk
fi

echo "Link to ~/.zshrc"
ln $WT/zshrc ~/.zshrc
echo "Changing shell"
chsh -s /bin/zsh

cp -rf prettyping.sh /usr/local/bin/pping
chmod +x /usr/local/bin/pping
echo 'alias pping="pping"' >> ~/.zshrc

